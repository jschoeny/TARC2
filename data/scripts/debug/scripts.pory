script Debug_EventScript_Script_5 {
  getpartysize
  if (var(VAR_RESULT) > 0) {
    dynmultipush("SINGLE", 0)
    dynmultipush("PARTY", 1)
    dynmultipush("CLOSE", 2)
    dynmultistack(0, 0, FALSE, 3, FALSE, 0, NULL)
    switch(var(VAR_RESULT)) {
      case 0:
        msgbox("You selected a single Pokemon", MSGBOX_DEFAULT)
      case 1:
        msgbox("You selected a party of Pokemon", MSGBOX_DEFAULT)
    }
    releaseall
  } else {
    msgbox("No Pokemon in party", MSGBOX_DEFAULT)
    release
  }
  release
}

