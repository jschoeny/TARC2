script Debug_EventScript_Script_1 {
  dynmultipush("CLEAR", 0)
  dynmultipush("INTRO_FOREST", 1)
  dynmultipush("INTRO_FIRE", 2)
  dynmultipush("INTRO_HOUNDOUR_DEFEATED", 3)
  dynmultipush("INTRO_TOWN_SQUARE", 4)
  dynmultipush("INTRO_PASS_GUARD", 5)
  dynmultipush("ENTERED_MOUNTAIN_PATH", 6)
  dynmultipush("INTRO_WOOPER_DEFEATED", 7)
  dynmultipush("RETURNED_AFTER_WOOPER", 8)
  dynmultipush("ENTERED_ROCKY_PATH", 9)
  dynmultipush("DEFEATED_GUARDIANS", 10)
  dynmultipush("RETURNED_AFTER_GUARDIANS", 11)
  dynmultipush("ENTERED_MOUNTAIN_SUMMIT", 12)
  dynmultipush("CLOSE", 13)
  dynmultistack(0, 0, FALSE, 6, FALSE, VAR_STORY_PROGRESS, NULL)
  switch(var(VAR_RESULT)) {
    case 0:
      setvar(VAR_STORY_PROGRESS, STORY_INITIAL)
    case 1:
      setvar(VAR_STORY_PROGRESS, STORY_INTRO_FOREST)
    case 2:
      setvar(VAR_STORY_PROGRESS, STORY_INTRO_FIRE)
    case 3:
      setvar(VAR_STORY_PROGRESS, STORY_INTRO_HOUNDOUR_DEFEATED)
    case 4:
      setvar(VAR_STORY_PROGRESS, STORY_INTRO_TOWN_SQUARE)
    case 5:
      setvar(VAR_STORY_PROGRESS, STORY_INTRO_PASS_GUARD)
    case 6:
      setvar(VAR_STORY_PROGRESS, STORY_ENTERED_MOUNTAIN_PATH)
    case 7:
      setvar(VAR_STORY_PROGRESS, STORY_INTRO_WOOPER_DEFEATED)
    case 8:
      setvar(VAR_STORY_PROGRESS, STORY_RETURNED_AFTER_WOOPER)
    case 9:
      setvar(VAR_STORY_PROGRESS, STORY_ENTERED_ROCKY_PATH)
    case 10:
      setvar(VAR_STORY_PROGRESS, STORY_DEFEATED_GUARDIANS)
    case 11:
      setvar(VAR_STORY_PROGRESS, STORY_RETURNED_AFTER_GUARDIANS)
    case 12:
      setvar(VAR_STORY_PROGRESS, STORY_ENTERED_MOUNTAIN_SUMMIT)
  }
  release
}

